{
  "info": {
    "name": "DB RAG API",
    "description": "Natural language database queries using RAG technology",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "12345678-1234-1234-1234-123456789012"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_key}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:9000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "dev-api-key-12345",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Auth Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/info",
              "host": ["{{base_url}}"],
              "path": ["auth", "info"]
            }
          }
        }
      ]
    },
    {
      "name": "System Management",
      "item": [
        {
          "name": "Initialize System",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"force_rebuild\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/initialize",
              "host": ["{{base_url}}"],
              "path": ["initialize"]
            }
          }
        }
      ]
    },
    {
      "name": "Database Queries",
      "item": [
        {
          "name": "Natural Language Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What are the top 5 customers by revenue?\",\n  \"query_type\": \"natural_language\",\n  \"limit\": 10,\n  \"include_explanation\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/query",
              "host": ["{{base_url}}"],
              "path": ["query"]
            }
          }
        },
        {
          "name": "SQL Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"SELECT * FROM customers LIMIT 5\",\n  \"query_type\": \"sql\",\n  \"limit\": 5,\n  \"include_explanation\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/query",
              "host": ["{{base_url}}"],
              "path": ["query"]
            }
          }
        }
      ]
    },
    {
      "name": "Schema Exploration",
      "item": [
        {
          "name": "List All Tables",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tables",
              "host": ["{{base_url}}"],
              "path": ["tables"]
            }
          }
        },
        {
          "name": "Get All Schema",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"include_sample_data\": false,\n  \"sample_limit\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/schema",
              "host": ["{{base_url}}"],
              "path": ["schema"]
            }
          }
        },
        {
          "name": "Get Specific Table Schema",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"table_name\": \"customers\",\n  \"include_sample_data\": true,\n  \"sample_limit\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/schema",
              "host": ["{{base_url}}"],
              "path": ["schema"]
            }
          }
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Database Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/stats",
              "host": ["{{base_url}}"],
              "path": ["stats"]
            }
          }
        }
      ]
    }
  ]
}
